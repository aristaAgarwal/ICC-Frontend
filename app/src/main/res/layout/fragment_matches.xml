<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="21dp"
    android:background="@color/black"
    android:orientation="vertical"
    tools:context=".UI.fragments.MatchesFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recent_matches"
        android:fontFamily="@font/poppins_medium"
        android:textAppearance="@style/sub_heading" />

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="12dp"
            android:orientation="horizontal">

            <include layout="@layout/recent_matches" />

            <include layout="@layout/recent_matches" />

            <include layout="@layout/recent_matches" />

            <include layout="@layout/recent_matches" />

            <include layout="@layout/recent_matches" />

            <include layout="@layout/recent_matches" />

        </LinearLayout>
    </HorizontalScrollView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="@string/upcoming_matches"
        android:layout_marginBottom="18dp"
        android:fontFamily="@font/poppins_medium"
        android:textAppearance="@style/sub_heading" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="true"
            android:orientation="vertical">

            <include layout="@layout/upcoming_matches_holder" />

            <include layout="@layout/upcoming_matches_holder" />

            <include layout="@layout/upcoming_matches_holder" />
            <include layout="@layout/upcoming_matches_holder" />

            <include layout="@layout/upcoming_matches_holder" />

            <include layout="@layout/upcoming_matches_holder" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>